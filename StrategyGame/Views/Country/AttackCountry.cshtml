@model StrategyGame.ViewModels.AttackCountryViewModel

@{
    ViewData["Title"] = "Attack Country";
}

<h2>
    Attack Country
</h2>
<hr />
<div class="col-md-4">
    <form asp-controller="Country" asp-action="AttackCountry">
        <select class="form-control" asp-for="EnemyCountryId" asp-items="@(new SelectList(Model.Countries,"Id","Name"))">
            <option>--- Choose country ---</option>
        </select>
        <span asp-validation-for="EnemyCountryId" class="text-danger"></span>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
            <a asp-action="Details" asp-route-id=@Model.Id>Cancel</a>
        </div>
    </form>
</div>